@model AKAWeb_v01.Models.SectionModel

@{
    ViewBag.Title = "CreateSection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Section</h2>

<div class="form-group">

    @using (Html.BeginForm("CreateSection", "Backend", FormMethod.Post, new { id = "sectionform" }))
    {
        <input class="form-control" type="text" name="sectiontitle" placeholder="Section Title" />
        <button type="submit" class="btn btn-default">Create Section</button>

    }

</div>

