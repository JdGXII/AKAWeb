<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - American Kinesiology Association</title>
    @if (IsSectionDefined("Head"))
    {
        @RenderSection("Head", false)
    }
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" rel="~/Content/Site.css"/>
    <link rel="icon" href="@Url.Content("~/Content/Images/favicon.ico")" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top header" style="max-height: 70px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>

                <a class="resizeimg; logo-hide" href="@Url.Action("Index", "Home")" style="float:left; margin-right:50px;">
                    <img class="resizeimg;" src="~/Content/Images/AKA Logo70px.png" />
                </a>
               
           </div>
            <div class="navbar-collapse collapse">
          
            
                <ul style="float:right;" class="nav navbar-nav" >

                   @if (Session["username"] != null)
                   {
                    <li>@Html.ActionLink("Hi "+Session["username"].ToString(), "MyProfile", "Backend")</li>
                    <li>@Html.ActionLink("Sign Out", "Logout", "Backend")</li>
                   }
                   else
                   {
                       <li>@Html.ActionLink("Sign In/Register", "Index", "Backend")</li>
                   }



                </ul>
                <div class="col-sm-3" style="float:right; padding-right:0px; display:inline;">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="q">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
                <div style="padding-top:15px; float:right;"><a href="@Url.Action("Index", "ShoppingCart")"><span class="glyphicon glyphicon-shopping-cart"></span></a></div>
                    <div class="container nav-2 text-center" style="color:darkgray; margin-top:75px; position:relative; z-index:4;">

        @Html.Action("MainMenu", "Menu")

    </div>
 

            </div>
        </div>
    </div>

    <div class="container">

        @RenderSection("Subheader", false)

    </div>
    <div class="container body-content" style="margin-top:70px;">
        <div class="row">
            @if (IsSectionDefined("LeftMenu"))
            {
                <div class="col-md-1"></div>
                <div class="col-md-2 bold-font mobile-hide">
                    @RenderSection("LeftMenu", false)
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            }
            else if (IsSectionDefined("BackMenu"))
            {

                <div class="col-md-2 bold-font">
                    @RenderSection("BackMenu", false)
                </div>
                <div class="col-md-10">
                    @RenderBody()
                </div>
            }

            else
            {
                <div class="col-md-12">
                    @RenderBody()
                </div>
            }

        </div>
        <footer>
            <div style="border-top: 2px solid maroon; margin-top: 5px;">

                <div style="float:right; padding-top:5px;">

                    <p>
                        <a style="margin-right:15px;" href="https://www.facebook.com/pages/American-Kinesiology-Association/182330715163194">
                            <img src="~/Content/Images/aka-facebook.jpg" />
                        </a>@Html.ActionLink("Contact Us", "Contact", "Home", new { @style = "color:#77777B;" })&nbsp;&nbsp;&nbsp;@Html.ActionLink("Privacy", "Privacy", "Home", new { @style = "color:#77777B;" })
                        &nbsp;&nbsp;&nbsp;@Html.ActionLink("Terms and Conditions", "TermsConditions", "Home", new { @style = "color:#77777B;" }) &nbsp;&nbsp;&nbsp;&copy; @DateTime.Now.Year
                    </p>
                </div>
                <div style="float:left; padding-top:5px;"><img src="~/Content/Images/AME Logo 20170426_50px.png" /></div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
