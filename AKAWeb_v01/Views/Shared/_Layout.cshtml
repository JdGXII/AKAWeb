<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" rel="~/Content/Site.css"/>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top header">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
           </div>
            <div class="navbar-collapse collapse">
                <a href="@Url.Action("Index","Home")" style="float:left; margin-right:50px;">
                    <img class="resizeimg;" src="~/Content/Images/AKA Logo70px.png" />
                </a>
            
                <ul class="nav navbar-nav" >
                    <li>@Html.ActionLink("About", "About", "SubPages")</li>
                    <li>@Html.ActionLink("Services", "AboutServices", "SubPages")</li>
                    <li>@Html.ActionLink("Resources", "AKABooks", "SubPages")</li>
                    <li>@Html.ActionLink("Sign In", "Index", "Backend")</li>
                    <
                    li>@Html.ActionLink("Register", "Register", "Backend")</li>

                    
                </ul>
                <div class="col-sm-3 col-md-3" style="float:left; padding-right:0px;">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="q">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
                <div style="padding-top:15px;"><a href="@Url.Action("Index", "ShoppingCart")"><span class="glyphicon glyphicon-shopping-cart"></span></a></div>
                
 
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <div style="border-top: 2px solid maroon; margin-top: 5px;">

                <div style="float:right; padding-top:5px;">

                    <p>
                        <a style="margin-right:15px;" href="https://www.facebook.com/pages/American-Kinesiology-Association/182330715163194">
                            <img src="~/Content/Images/aka-facebook.jpg" />
                        </a>@Html.ActionLink("Contact Us", "Contact", "Home", new { @style = "color:#77777B;" })&nbsp;&nbsp;&nbsp;@Html.ActionLink("Privacy", "Privacy", "Home", new { @style = "color:#77777B;" })
                        &nbsp;&nbsp;&nbsp;@Html.ActionLink("Terms and Conditions", "TermsConditions", "Home", new { @style = "color:#77777B;" }) &nbsp;&nbsp;&nbsp;&copy; @DateTime.Now.Year
                    </p>
                </div>
                <div style="float:left; padding-top:5px;"><img src="~/Content/Images/AME Logo 20170426_50px.png" /></div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
