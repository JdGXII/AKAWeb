@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="border:1px ridge black; align-content:center;">
    
    <div id="myCarousel" class="carousel slide resizeimg" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Images/feature_Events_and_Services.jpg" alt="Los Angeles">
            </div>

            <div class="item">
                <img src="~/Content/Images/feature_Events_and_Services.jpg">
            </div>

            <div class="item">
                <img src="~/Content/Images/feature_Events_and_Services.jpg" alt="New York">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

